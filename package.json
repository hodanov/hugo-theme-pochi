{
  "scripts": {
    "e2e": "playwright test",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "prettier . --check",
    "serve": "hugo serve -s example_site --themesDir ../.. -t pochi",
    "build": "hugo --gc -s example_site --themesDir ../.. -t pochi",
    "vendor:sync": "node scripts/vendor-sync.js",
    "vendor:verify": "node scripts/vendor-sync.js --verify",
    "vendor:update": "npm update fuse.js mark.js --save-dev && npm run vendor:sync",
    "vendor:upgrade:major": "npx npm-check-updates -u --filter fuse.js,mark.js && npm i && npm run vendor:sync"
  },
  "dependencies": {
    "@fsouza/prettierd": "^0.27.0",
    "prettier": "^3.8.1",
    "prettier-plugin-go-template": "^0.0.15"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "fuse.js": "^7.1.0",
    "mark.js": "^8.11.1",
    "npm-check-updates": "^19.4.1",
    "typescript": "^5.9.3"
  }
}
